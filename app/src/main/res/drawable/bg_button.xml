<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/successDark" />
            <solid android:color="@color/success" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/successDark" />
            <solid android:color="@color/successDark" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/success" />
            <solid android:color="@color/successLight" />
        </shape>
    </item>

</selector>